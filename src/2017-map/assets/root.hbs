<div id="map" style="width: 100%; height: 100%"></div>
<div class="search-btn text-center" id="searchBtn">
    <span class="glyphicon glyphicon-search"></span>
</div>
<div id="selectedStore" class="selected-store">
    <div class="store-name">
        <span class="marker"></span>
        <span id="storeName">测试</span>
    </div>
    <div id="storeFloor" class="num">
        F1
    </div>
</div>
<div class="search-panel" id="searchPanel">
    <label>
        <input id="keywordInput" placeholder="请输入商家名、设施名..." type="text">
        <span id="searchIcon" class="glyphicon glyphicon-search search-icon"></span>
        <span class="clear-btn" id="clearBtn"></span>
    </label>
    <button id="cancelBtn">
        取消
    </button>
    <div class="institution">
        <div class="title">设施</div>
        <div class="btns" id="btns">
            {{#each btns}}
                <button>{{this}}</button>
            {{/each}}
        </div>
    </div>
</div>
<div id="resultPanel" class="result-panel">
    <label>
        <input id="resultKeywordInput" type="text">
        <span class="glyphicon glyphicon-search"></span>
        <span id="iconClose" class="icon-close"></span>
    </label>

    <div class="results">
        <div class="title">
            <span class="glyphicon glyphicon-search"></span>
            共找到“<span id="resultKeywordSpan">H</span>”相关<span id="resultsCount">1</span>个结果
        </div>
        <ul id="resultsList">
            <li>测试 <span class="pull-right">F1-102</span></li>
            <li>测试 <span class="pull-right">F1-102</span></li>
            <li>测试 <span class="pull-right">F1-102</span></li>
        </ul>
    </div>
</div>
